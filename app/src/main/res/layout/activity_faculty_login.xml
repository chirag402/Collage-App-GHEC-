<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ghec" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text=" LOGIN HERE "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/eTgmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Gmail Account"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/baseline_edit_24"
        tools:ignore="HardcodedText,RtlCompat" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/eTroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/baseline_fingerprint_24"
        tools:ignore="HardcodedText,RtlCompat" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:layout_gravity="center"
        android:text="SIGN IN"
        android:textStyle="bold"
        android:background="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSignFaculty"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:layout_gravity="center"
        android:text=" # NEW USER CLICK HERE"
        android:textStyle="italic"
        android:background="@color/black"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

</LinearLayout>

