<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ghec"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="SIGN UP (NEW USER)"
        android:gravity="center"
        tools:ignore="HardcodedText"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/eTname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/baseline_face_24"
        tools:ignore="HardcodedText,RtlCompat" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/eTgmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Enter Gmail Account"
        android:drawableStart="@drawable/baseline_edit_24"
        tools:ignore="HardcodedText,RtlCompat" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:endIconMode="password_toggle"
        tools:ignore="ExtraText">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eTpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_fingerprint_24"
            android:ems="10"
            android:hint="Create Password"
            android:inputType="textPassword"
            tools:ignore="HardcodedText,RtlCompat" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:text="REGISTER"
        android:textStyle="bold"
        android:background="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

</LinearLayout>
